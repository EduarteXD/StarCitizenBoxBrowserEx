{
  "manifest_version": 3,
  "name": "星际公民盒子浏览器拓展",
  "version": "0.0.5",
  "description": "为星际公民网站及工具站提供汉化",
  "author": "xkeyC",
  "icons": {
    "192": "icon.png"
  },
  "host_permissions": [
    "*://ch.citizenwiki.cn/"
  ],
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://robertsspaceindustries.com/*",
        "https://*.robertsspaceindustries.com/*",
        "https://www.erkul.games/*",
        "https://uexcorp.space/*"
      ],
      "js": [
        "core.js",
        "thirdparty/timeago.full.min.js"
      ]
    },
    {
      "matches": [
        "https://www.erkul.games/*"
      ],
      "js": [
        "thirdparty/jquery.min.js"
      ]
    }
  ]
}