{
  "manifest_version": 2,
  "name": "星际公民盒子浏览器拓展",
  "version": "0.0.1",
  "description": "为星际公民网站及工具站提供汉化",
  "author": "xkeyC",
  "default_locale": "zh-CN",
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "https://ch.citizenwiki.cn/*",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://robertsspaceindustries.com/*",
        "https://www.erkul.games/*",
        "https://uexcorp.space/*",
        "https://ccugame.app/*"
      ],
      "js": [
        "core.js"
      ]
    }
  ]
}