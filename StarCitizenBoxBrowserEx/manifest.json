{
  "manifest_version": 3,
  "name": "星际公民盒子浏览器拓展",
  "version": "0.0.1",
  "description": "为星际公民网站及工具站提供汉化",
  "author": "xkeyC",
  "icons": {
    "128": "icon.png"
  },
  "host_permissions": [
    "*://ch.citizenwiki.cn/"
  ],
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://robertsspaceindustries.com/*",
        "https://www.erkul.games/*",
        "https://uexcorp.space/*",
        "https://ccugame.app/*"
      ],
      "js": [
        "core.js"
      ]
    }
  ]
}